<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/bottom_sheet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:orientation="vertical"
              android:paddingBottom="10dp"
              app:behavior_hideable="false"
              app:behavior_peekHeight="56dp"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
              android:background="@drawable/gradient_orange">

    <TextView
            android:text="Carpetas"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/txtcarpetas" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:background="@drawable/gradient_orange" android:textColor="#C8FFFFFF" android:gravity="center"
            android:textSize="22sp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/recyclerCarpetas"
            app:layout_constraintTop_toBottomOf="@+id/txtcarpetas"/>

</LinearLayout>