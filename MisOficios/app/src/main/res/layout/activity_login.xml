<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login" android:background="#A9615D5D">


    <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="380dp"
            android:layout_height="222dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.578" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/linearLayout" android:background="@drawable/guzman">
        <ImageView
                android:layout_width="129dp"
                android:layout_height="111dp" app:srcCompat="@drawable/icon" android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintVertical_bias="0.209"/>
        <TextView
                android:id="@+id/textNombreApp"
                android:layout_width="180dp"
                android:layout_height="36dp"
                android:text="Mis Oficios"
                android:fontFamily="@font/news_cycle"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/background_light"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.895" app:layout_constraintHorizontal_bias="0.497"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="378dp"
            android:layout_height="436dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="17dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="37dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="258dp" android:id="@+id/relativeLayout"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/background">

        <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:contentDescription="usuario"
                android:hint="Usuario"
                android:id="@+id/txuser"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="372dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/background_light" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <EditText

                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txpw"
                android:hint="Contraseña"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp" android:layout_marginBottom="308dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="Contraseña" app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@android:color/background_light" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:id="@+id/btnIniciar"
                android:layout_width="368dp"
                android:layout_height="44dp"
                android:text="Iniciar sesion"
                android:fontFamily="@font/news_cycle"
                android:layout_below="@id/txpw"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/barra"
                android:textColor="@android:color/background_light"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>